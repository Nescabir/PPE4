<% title "Liste des opérations de " + @infojoueur['pseudo'] %>
<div class="sidebar">
    <div class="users">
        <% @players.each do |player| %>
            <a class="user" href="<%= players_path %>/<%= player['idjoueur'] %>"><%= player['pseudo'] %></a>
        <% end %>
    </div>
    <div class="actions">
        <a href="<%= new_player_path %>" class="action-button"><%= fa_icon "user-plus"%> Ajouter un joueur</a>
    </div>
</div>
<div class="content-wrapper">
    <div class="content-inner">
        <div class="header">Opérations de <%= @infojoueur['pseudo'] %></div>
        <div class="content-operation">
            <div class="titre">ID</div>
            <div class="titre">Intitulé</div>
            <div class="titre">Date</div>
            <div class="titre">Montant</div>
        <% @operationsjoueur.each do |operation| %>
            <% dateoperation = DateTime.strptime(operation['dateoperation'], '%Y-%m-%dT%H:%M:%S%z') %>
            <div class="id"><%= operation['idoperation'] %></div>
            <div><%= operation['nomoperation'] %></div>
            <div><%= dateoperation.strftime('%D %T') %></div>
            <% if operation['montant'].to_i > 0%>
                <div class="montant sup"><%= operation['montant'] %></div>
            <% else %>
                <div class="montant inf"><%= operation['montant'] %></div>
            <% end %>
        <% end %>
        </div>
        <div class="actions-2">
        <%= link_to "Ajouter une opération", new_player_operation_path(@infojoueur['idjoueur']) %>
        <%= link_to "Retour", player_path(@infojoueur['idjoueur']) %>
        </div>
    </div>
</div>