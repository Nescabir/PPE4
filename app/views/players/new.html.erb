<% title "Ajouter un joueur" %>
<div class="sidebar">
    <div class="users">
        <% @players.each do |player| %>
            <a class="user" href="<%= players_path %>/<%= player['idjoueur'] %>"><%= player['pseudo'] %></a>
        <% end %>
    </div>
    <div class="actions">
        <a href="<%= new_player_path %>" class="action-button"><%= fa_icon "user-plus"%> Ajouter un joueur</a>
    </div>
</div>
<div class="content-wrapper">
    <div class="content-inner">
        <%= form_with scope: :player, url: players_path, local: true do |form| %>
            <div class="header">
                Ajouter un joueur
            </div>
            <div class="content">
                <div><%= form.label :username, :Pseudo %></div>
                <div><%= form.text_field :username %></div>
                <div><%= form.label :password, :"Mot de passe" %></div>
                <div><%= form.text_field :password %></div>
                <div><%= form.label :lastname, :Nom %></div>
                <div><%= form.text_field :lastname %></div>
                <div><%= form.label :firstname, :Prénom %></div>
                <div><%= form.text_field :firstname %></div>
                <div><%= form.label :birthday, :"Date de naissance" %></div>
                <div><%= form.date_field :birthday %></div>
                <div><%= form.label :phone, :"Numéro de téléphone" %></div>
                <div><%= form.phone_field :phone %></div>
            </div>
            <div class="actions-2">
                    <%= form.submit :Ajouter %>
                    <%= link_to "Annuler", players_path%>
            </div>
        <% end %>
    </div>
</div>